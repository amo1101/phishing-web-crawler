[Unit]
Description=FMA IOSCO Crawler Orchestrator
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=crawl
Group=crawl
WorkingDirectory=/opt/fma-crawler
ExecStart=/opt/fma-crawler/venv/bin/python -m fma.main --config /opt/fma-crawler/config.yaml
Restart=always
RestartSec=10s
StartLimitIntervalSec=300
StartLimitBurst=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
